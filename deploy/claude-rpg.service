[Unit]
Description=Claude RPG - Claude Code Companion
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/dev/whoabuddy/claude-rpg
Environment=NODE_ENV=production
Environment=CLAUDE_RPG_PORT=4011
Environment=PATH=%h/.nvm/versions/node/v24.5.0/bin:/usr/local/bin:/usr/bin:/bin
ExecStart=%h/.nvm/versions/node/v24.5.0/bin/node dist/server/server/index.js
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=default.target
