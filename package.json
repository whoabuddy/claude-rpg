{
  "name": "claude-rpg",
  "version": "2.1.0",
  "description": "Mobile-first companion for Claude Code with RPG progression",
  "type": "module",
  "bin": {
    "claude-rpg": "./dist/server/server/cli.js"
  },
  "scripts": {
    "dev": "CLAUDE_RPG_PORT=4012 concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun run --watch server-v2/index.ts",
    "dev:client": "vite",
    "build": "bun run build:server && bun run build:client",
    "build:server": "echo 'Server v2 runs from source with Bun'",
    "build:client": "bun run scripts/build-client.ts",
    "build:client:vite": "vite build",
    "start": "bun run server-v2/index.ts",
    "setup": "bun run server-v2/cli.ts setup",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:client": "bun test src",
    "test:server": "bun test server-v2",
    "deploy": "./deploy/deploy.sh"
  },
  "dependencies": {
    "ansi_up": "^6.0.6",
    "chokidar": "^3.5.3",
    "lucide-react": "^0.563.0",
    "react-router-dom": "^7.13.0",
    "ws": "^8.14.2",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.4.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "bun-types": "^1.3.7",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "happy-dom": "^20.4.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.6",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "hooks"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "developer-tools",
    "tmux"
  ],
  "author": "",
  "license": "MIT"
}
