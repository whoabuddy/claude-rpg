{
  "name": "claude-rpg",
  "version": "1.5.0",
  "description": "Mobile-first companion for Claude Code with RPG progression",
  "type": "module",
  "bin": {
    "claude-rpg": "./dist/server/server/cli.js"
  },
  "scripts": {
    "dev": "CLAUDE_RPG_PORT=4012 concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/server/index.js",
    "setup": "node dist/server/server/cli.js setup",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "deploy": "./deploy/deploy.sh"
  },
  "dependencies": {
    "ansi_up": "^6.0.6",
    "chokidar": "^3.5.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.6",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.6"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist",
    "hooks"
  ],
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "developer-tools",
    "tmux"
  ],
  "author": "",
  "license": "MIT"
}
